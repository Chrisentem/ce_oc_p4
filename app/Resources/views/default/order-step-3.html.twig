{% extends 'base.html.twig' %}
{% block title %}
    Achat étape 3 - {{ parent() }}
{% endblock %}
        {% block breadcrumb %}
            {% include 'default/_breadcrumb.html.twig' %}
        {% endblock %}
{% block body %}
        <div class="row">
            <div id="content" class="col-xs-12 col-sm-6">
                <h3>Récapitulatif</h3>
                <table class="table table-dark">
                    <thead>
                        <tr>
                            <th scope="col">Firstname</th>
                            <th scope="col">Lastname</th>
                            <th scope="col">Birthday</th>
                            <th scope="col">Price</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for ticket in purchase.tickets %}
                        <tr>
                            <td>{{ ticket.firstname }}</td>
                            <td>{{ ticket.lastname }}</td>
                            <td>{{ ticket.birthdate|date("m/d/Y") }}</td>
                            <td>{{ ticket.price }} &euro;</td>
                        </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>        
        <div class="row">
            <div id="content" class="col-xs-12 col-sm-6">
                <h3>Confirmation</h3>
                <p>Veuillez nous indiquer à quelle adresse email envoyer le billet électronique</p>
                    <div class="well">
                    {{ form_start(form) }}
                        {{ form_row(form.email) }}
                        {% autoescape false %}
                        {{ form_row(form.agree, { 'label': 'J\'ai lu et j\'accèpte les conditions générales de vente' }) }}
                        {% endautoescape %}
                    {{ form_rest(form)}}
                    <a href="{{ path('order_step_2') }}" class="btn btn-primary">Retour</a>
                    <button type="submit" class="btn btn-primary">Confirmer la commande</button>
                    {{ form_end(form)}}
                    </div>
            </div>
        </div>
{% endblock %}
