{% extends 'base.html.twig' %}
{% block title %}
    Achat étape 4 - {{ parent() }}
{% endblock %}
        {% block breadcrumb %}
            {% include 'default/_breadcrumb.html.twig' %}
        {% endblock %}
{% block body %}
        <div class="row">
            <div id="content" class="col-xs-12 col-sm-6">
                <h3>Paiement</h3>
                <table class="table table-dark">
                    <thead>
                    <tr>
                        <th scope="col">Firstname</th>
                        <th scope="col">Lastname</th>
                        <th scope="col">Birthday</th>
                        <th scope="col">Price</th>
                    </tr>
                    </thead>
                    <tbody>
                    {% for ticket in purchase.tickets %}
                        <tr>
                            <td>{{ ticket.firstname }}</td>
                            <td>{{ ticket.lastname }}</td>
                            <td>{{ ticket.birthdate|date("m/d/Y") }}</td>
                            <td>{{ ticket.price }} &euro;</td>
                        </tr>
                    {% endfor %}
                    <tr id="total-amount" class="bg-info">
                        <th scope="col"></th>
                        <th scope="col"></th>
                        <th scope="col">Montant total à régler</th>
                        <th scope="col">{{ purchase.total }} &euro;</th>
                    </tr>
                    </tbody>
                </table>
            </div>
        </div>        
        <div class="row">
            <div class="col-xs-12 col-sm-6">
                <form action="" method="POST">
                    {% if purchase.total %}
                    <script
                        src="https://checkout.stripe.com/checkout.js" class="stripe-button"
                        data-key= "pk_test_Fk9X4z6v3NxDGpoQHmHrfWj0"
                        data-amount={{ purchase.total * 100 }}
                        data-currency="EUR"
                        data-name="Billetterie Louvre"
                        data-description="Payment"
                        data-image="{{ asset('img/logo-louvre-2018-mini.jpg') }}"
                        data-locale="auto">
                    </script>
                    {% else %}
                    <input type="submit" value="J&apos;achète">
                    {% endif %}
                </form>
            </div>
        </div>
{% endblock %}
